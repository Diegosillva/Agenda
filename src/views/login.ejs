<%-include('includes/head')%>
<%-include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça seu Login ou crie sua Conta abaixo.</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro.</h4>
          <p>Se voçê ainda não tem conta, preencha o formulario abaixo.</p>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>  
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>          
              <button type="submit" class="btn btn-primary m-1">Criar minha conta</button>
          </form>

        </div>
        <div class="col-lg">
          <h4>Faça seu Login.</h4>

          <p>Se voçê ja tem uma conta faça login abaixo.</p>

          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>  
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>          
              <button type="submit" class="btn btn-primary m-1">Entrar</button>
          </form>

        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>





<%-include('includes/footer')%>